{
	"title": "nagios",
	"description": "Nagios Monitoring",
	"configuration": {
		"TZ": "Australia/Sydney"
	},
	"os_packages": {
		"adds": [
			"phpmyadmin"
		]
	},
	"bindings": [
		{
			"type": "embed",
			"descriptor": {
				"repository": "https://github.com/MarkRatjens/ap_php7"
			},
			"variables": {
			  "TZ": "^^TZ^^",
				"port": "8880",
				"servername": "sqladmin.^^domain_name^^",
		        "ServerAdmin": "Mysql Admin",
		        "locale": "^^locale^^",
		        "charset": "^^charset^^"
			}
		},
		{
			"descriptor": {
				"repository": "https://github.com/MarkRatjens/mariadb"
			},
			"variables": {
				"username": "^^identifier^^",
				"password": "^^random(16)^^"
			}
		}
	],
	"containers": [
		{
			"type": "lxd"
		}
	]
}
