{
	"title": "nagios",
	"description": "Nagios Monitoring",
	"configuration": {
		"TZ": "Australia/Sydney"
	},
	"os_packages": {
		"adds": [
			"phpmyadmin"
		]
	},
	"bindings": [
		{
			"type": "embed",
			"repository": "https://github.com/MarkRatjens/apache",
			"variables": {
				"port": 8181,
				"servername": "^^identifier^^.^^domain_name^^"
			}
		},
		{
			"repository": "https://github.com/MarkRatjens/mariadb",
			"variables": {
				"username": "^^identifier^^",
				"password": "^^random(16)^^"
			}
		}
	],
	"containers": [
		{
			"type": "lxd",
			"image": "enginesd_debian_base"
		}
	]
}
